package com.charitra.SpringMVC;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;

public class ProductDB {
	Connection con;

	public ProductDB() {
		try {
			Class.forName("com.mysql.jdbc.Driver");
			con = DriverManager.getConnection("jdbc:mysql://localhost:3306/test", "root", "Charitra2536");
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}

	public void save(Product p) throws SQLException {
		PreparedStatement ps = con.prepareStatement("INSERT INTO PRODUCTS VALUES(?,?,?,?)");
		ps.setString(2, p.getName());
		ps.setString(3, p.getType());
		ps.setString(4, p.getPlace());
		ps.setInt(5, p.getWarrenty());
		ps.execute();
	}

}
